    <style>
        :root {
            --color-bg: #0a0e17;
            --color-surface: #141821;
            --color-surface-elevated: #1a1f2e;
            --color-primary: #00ffa3;
            --color-primary-dim: #00cc82;
            --color-accent: #00d4ff;
