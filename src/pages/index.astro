            transform: scale(1.15) rotate(-5deg);
        }

        .lang-switch .lang-code {
            position: relative;
            z-index: 1;
            font-weight: 600;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            color: var(--color-text-dim);
            transition: all 0.3s var(--ease-smooth);
        }

        .lang-switch:hover .lang-code {
            color: var(--color-bg);
        }
    </style>

    <script>
        // Language switching functionality
        const langSwitch = document.getElementById('langSwitch');
        const currentFlag = document.getElementById('currentFlag');
        const currentLang = document.getElementById('currentLang');

        // Language configurations
        const languages = {
            en: { flag: 'ðŸ‡ºðŸ‡¸', code: 'EN', htmlLang: 'en' },
            es: { flag: 'ðŸ‡¦ðŸ‡·', code: 'ES', htmlLang: 'es' }
        };

        // Get stored language or default to English
        let currentLanguage = localStorage.getItem('lang') || 'en';

        // Apply language on page load
        function applyLanguage(lang) {
            currentLanguage = lang;
            localStorage.setItem('lang', lang);

            // Update button display
            currentFlag.textContent = languages[lang].flag;
            currentLang.textContent = languages[lang].code;

            // Update HTML lang attribute
            document.documentElement.lang = languages[lang].htmlLang;

            // Update all translatable elements
            const elements = document.querySelectorAll('[data-en][data-es]');
            elements.forEach(el => {
                const text = el.getAttribute(`data-${lang}`);
                if (text) {
                    el.textContent = text;
                }
            });
        }

        // Toggle language on click with smooth transition
        langSwitch.addEventListener('click', () => {
            const newLang = currentLanguage === 'en' ? 'es' : 'en';

            // Add transition class
            document.body.classList.add('lang-switching');

            // Wait for fade out, then switch language
            setTimeout(() => {
                applyLanguage(newLang);

                // Remove transition class to fade back in
                setTimeout(() => {
                    document.body.classList.remove('lang-switching');
                }, 50);
            }, 300);
        });

        // Apply stored language on page load
        applyLanguage(currentLanguage);
    </script>
